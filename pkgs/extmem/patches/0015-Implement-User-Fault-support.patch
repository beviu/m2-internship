+  LOG("extmem_init: registering User Fault handler\n");
+  uswap_register_ufault_handler();
+  #elif defined(USWAP_SIGNAL) // for self-paging mode
   LOG("extmem_init: registering SIGBUS handler\n");
   uswap_register_handler(SIGBUS);
