 			/* don't free the page */
@@ -665,7 +668,8 @@ static __always_inline ssize_t __mcopy_atomic(struct mm_struct *dst_mm,
 				       src_addr, &page, mcopy_mode, wp_copy);
 		cond_resched();
 
-		if (unlikely(err == -ENOENT)) {
